---
import { useTranslations } from "../i18n/useTranslations";

const locale = Astro.currentLocale;
const t = useTranslations(locale!);
---

<footer
  class="flex flex-col justify-center gap-2 items-center mb-16 w-full min-h-24 border-border border-t-2 bg-background text-foreground"
>
  <p class="text-foreground text-center">
    {t("footer")["poweredBy"]}
    <a class="underline" href="https://astro.build"> Astro </a>
  </p>
  <p class="text-xs text-muted-foreground">
    {t("footer")["hostedBy"]}
    <a class="underline" href={"https://coolify.io/"}> Coolify </a>
  </p>
</footer>
