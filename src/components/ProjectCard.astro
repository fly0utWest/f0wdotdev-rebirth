---
import type { z } from "astro:content";
import { ProjectsSchema } from "../content/schemas";
import Image from "astro/components/Image.astro";
import formatDate from "../lib/formatDate";

interface Props {
  project: z.infer<typeof ProjectsSchema>;
}

const { project }: Props = Astro.props;

const locale = Astro.currentLocale;
---

<a
  href={project.link}
  class="flex flex-1 flex-col min-h-26 w-full h-full transition-all duration-150 border-2 border-border relative hover:border-primary hover:shadow-secondary hover:shadow-md group hover:scale-[103%] rounded overflow-hidden"
>
  <div class="relative">
    <div
      class="bg-black bg-opacity-50 flex justify-center items-center absolute top-0 left-0 w-full h-full opacity-0 group-hover:opacity-100 transition-opacity"
    >
      <span class="text-2xl text-primary">Click to view</span>
    </div>
    <Image
      class="w-full h-40 object-cover object-center"
      src={project.preview}
      width="320"
      height="160"
      alt="Project Preview"
    />
  </div>
  <div class="p-4 h-full flex gap-4 flex-col justify-between">
    <div>
      <h3 class="text-lg text-primary flex gap-1 justify-between font-bold">
        {project.title}
      </h3>
      <p
        class="text-foreground"
        set:html={locale === "en"
          ? project.description.en
          : project.description.ru}
      />
    </div>
    <div class="relative">
      <div class="w-full">
        <h4 class="text-lg text-secondary font-semibold">Tools</h4>
        <ul class="flex flex-row gap-4 flex-wrap">
          {
            project.expand.tools.map((tool) => (
              <li class="text-foreground text-lg" set:html={tool.icon} />
            ))
          }
        </ul>
      </div>
      <p class="text-sm text-gray-400 mt-4">
        Created on <span>{formatDate(project.started)}</span>
      </p>
    </div>
  </div>
</a>
