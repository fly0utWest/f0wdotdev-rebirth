---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SideNav from "../components/SideNav.astro";
import "../styles/global.css";
import "@fontsource-variable/jetbrains-mono";
import WebringNav from "../components/WebringNav.astro";
import WebringNavFallback from "../components/WebringNavFallback.astro";
---

<!doctype html>
<html
  lang={Astro.currentLocale}
  class="scroll-smooth overscroll-y-none antialiased dark"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:image" content="/opengraph-image.png" />
    <meta
      name="description"
      content={Astro.currentLocale === "en"
        ? "a fullstack dev's website ¯_(ツ)_/¯"
        : "Личный сайт-визитка ¯_(ツ)_/¯"}
    />
    <meta property="twitter:image" content="/opengraph-image.png" />

    <title>
      {
        Astro.currentLocale === "en"
          ? "fly0utWest's lair"
          : "Привет, я fly0utWest"
      }
    </title>
  </head>
  <body
    class="bg-vallhalla bg-fixed bg-cover bg-no-repeat bg-center overscroll-none text-white"
  >
    <Header />
    <div
      class="max-w-(--breakpoint-lg) bg-background min-h-screen lg:mx-auto dark:lg:border-x-border lg:border-x-black lg:border-x-2"
    >
      <div class="relative flex flex-col lg:flex-row-reverse">
        <SideNav />
        <main class="p-6 flex flex-col gap-6 w-full min-h-screen">
          <slot />
        </main>
      </div>
      <Footer />
    </div>
    <WebringNav/>
  </body>
</html>
